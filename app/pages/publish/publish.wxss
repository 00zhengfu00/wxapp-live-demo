#pusher {
  width: 100%;
  height: 100%;
}

.publish-page {
  width: 100vw;
  height: 100vh;
  position: relative;
}

.publish-control {
  width: 100%;
  height: 250rpx;
  background: linear-gradient(-180deg, rgba(0,0,0,0.00) 0%, rgba(0,0,0,0.24) 100%);
  transform: translateY( 250rpx);
  opacity: 0;
  transition: all ease 0.4s;
  position: absolute;
  bottom: 0;
  left: 0;
}

.publish-page.active .publish-control {
  opacity: 1;
  transform: translateY(0);
}

.publish__mainbtn {
  width: 150rpx;
  height: 150rpx;
  border-radius: 75rpx;
  background-color: #fff;
  transition: all ease 0.3s;
  position: absolute;
  top: 30rpx;
  left: calc(50% - 75rpx);
  display: flex;
  justify-content: center;
  align-items: center;
}

.publish__mainbtn.disable {
  background-color: rgba(100, 100, 100, 1);
}
.publish__mainbtn.disable .mainbtn__center {
  background-color: #550000;
}

.stop .mainbtn__center {
  width: 30rpx;
  height: 30rpx;
  border-radius: 15rpx;
}

.mainbtn__center {
  width: 152rpx;
  height: 152rpx;
  border-radius: 76rpx;
  background-color: #ff0000;
  transition: all ease 0.2s;
  position: relative;
}

.mainbtn__icon {
  position: absolute;
  height: 80rpx;
  width: 80rpx;
  left: 35rpx;
  top: 35rpx;
  transition: opacity ease 0.4s;
  opacity: 0;
}

.pushing .icon__pause {
  opacity: 1;
}

.pause .icon__resume {
  opacity: 1;
}

.switchbtn {
  width: 80rpx;
  height: 80rpx;
  left: 80rpx;
  top: 100rpx;
  position: absolute;
}

.exitbtn {
  width: 80rpx;
  height: 80rpx;
  right: 80rpx;
  top: 100rpx;
  position: absolute;
}

.magicbtn {
  width: 80rpx;
  height: 80rpx;
  right: 335rpx;
  top: 100rpx;
  position: absolute;
}

.magicbtn.active {
}

.control__mode {
  position: absolute;
  right: 305rpx;
  top: 20rpx;
  width: 120rpx;
  color: #fff;
  font-size: 20rpx;
  background: rgba(74, 74, 74, .46);
  border: 1px solid #D4D4D4;
  border-radius: 20rpx;
  text-align: center;
  padding: 10rpx;
}

.wrapper {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}
