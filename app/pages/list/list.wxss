page {
  background-color: #fafafa;
}

.container {
  width: 100wh;
  max-height: 100vh;
  padding: 0;
  display: flex;
  flex-direction: column;
}

.active-list {
  width: 100vw;
  height: 92vh;
}

.blank {
  width: 100vw;
  height: 10vh;
}

.noactive {
  height: 300rpx;
  width: 300rpx;
  margin-top: calc(50% - 150rpx);
  font-size: 40rpx;
  text-align: center;
  margin-left: auto;
  margin-right: auto;
  display: flex;
  flex-direction: column;
  justify-content: center;

  color: rgba(27,30,34,0.47);
  letter-spacing: -0.57px;
}

.noactive_tv {
  width: 50%;
  margin: auto;
}

.livebtn {
  height: 8vh;
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: center;
  background: #fff;
  box-shadow: 0px -2px 2px rgba(0, 0, 0, .04);
}

.livebtn-content {
  width: 160rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.livebtn__text {
  font-size: 28rpx;
}

.livebtn__icon {
  height: 24rpx;
  width: 32rpx;
}

.startpublish {
  position: fixed;
  z-index: 100;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(to left, #B0DAB9, #DAD299);
  display: none;
}

.startpublish.active {
  display: block;
}

.title {
  position: absolute;
  top: 30%;
  width: 500rpx;
  left: 125rpx;
  display: flex;
  flex-direction: column;
}

.title__input {
  width: 100%;
  text-align: center;
  margin-bottom: 50rpx;
  font-size: 40rpx;
  color: rgba(255,255,255,0.87);
  letter-spacing: 1px;
  text-shadow: 0 2px 4px rgba(0,0,0,0.50);
}

.title__line {
  width: 100%;
  height: 2rpx;
  background: #fff;
  box-shadow: 0 2px 4px 0 rgba(0,0,0,0.50);
}

.placeholder {
  text-align: center;
  color: rgba(255,255,255,0.87);
}

.startbtn {
  position: absolute;
  bottom: 18%;
  width: 60%;
  height: 80rpx;
  left: 20%;
  opacity: 0.63;
  background: #FFFFFF;
  border-radius: 30rpx;
  display: flex;
  justify-content: center;
}

.startbtn__text {
  width: 100%;
  text-align: center;
  height: 100%;
  line-height: 80rpx;
  font-size: 30rpx;
  color: #000000;
  letter-spacing: 1px;
}

.exit {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  right: 30rpx;
  top: 30rpx;
}

.share-wrapper {
  width: 100vw;
  height: 100vh;
  position: absolute;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, .7);
}

.text-wrapper {
  margin-top: 200rpx;
  width: 100%;
}

.text {
  width: 100%;
  text-align: center;
  margin-bottom: 50rpx;
  color: #fff;
  font-size: 30rpx;
  display: block;
  font-weight: bold;
  z-index: 1000;
}
